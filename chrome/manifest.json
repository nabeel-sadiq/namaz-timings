{
  "manifest_version": 3,
  "name": "Namaz Timings",
  "version": "1.0",
  "description": "Get the current namaz timings in your area.",
  "permissions": ["activeTab", "geolocation"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.mjs", "date.mjs"],
      "css": ["input.css", "output.css"]
    }
  ]
}
